#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *next;        
};
struct node * create()
{
    struct node *head,*newnode,*ptr;     
    head=0;  
    int ch=1;      
    while(ch)
    {        
        newnode=(struct node*)malloc(sizeof(struct node));
        printf("Enter the data");
        scanf("%d",&newnode->data);
        newnode->next=0;
        if(head==0)
          {
            head=newnode;
            ptr=newnode;
          }
        else
          {
            ptr->next=newnode;
            ptr=newnode;
          }
        printf("Do you wish to enter a new number at a different location");
        scanf("%d",&ch);
        
    }
    return head;
}


struct node display(struct node * head)
 {
  
  struct node *newnode,*ptr;  
  ptr=head;
  while(ptr!=0)
     {
        printf("%d\n",ptr->data);
        // printf("%p\n",newnode->next);
        ptr=ptr->next;
     }

 }

void main()
{
  struct node *c;  
  c=create();
  printf("%p\n",c);
  display(c);   
     
}
